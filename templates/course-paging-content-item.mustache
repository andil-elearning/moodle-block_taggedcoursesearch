{{!
    @template block_taggedcoursesearch/course-paging-content-item

    This template renders each course block.

    Example context (json):
    {
        "page": 1,
        "active": true,
        "courses": [
            {
                "fullnamedisplay": "course 1",
                "viewurl": "https://www.google.com",
                "summary": "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
            },
            {
                "fullnamedisplay": "course 2",
                "viewurl": "https://www.google.com",
                "summary": "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
            }
        ]
    }
}}
{{< block_taggedcoursesearch/paging-content-item }}
    {{$classes}}card-grid mx-0 row row-cols-1 row-cols-sm-2 row-cols-lg-3{{/classes}}
    {{$content}}
        {{#courses}}
            <div class="col d-flex px-0 mb-2">
            {{> block_taggedcoursesearch/courses-view-course-item }}
            </div>
        {{/courses}}
    {{/content}}
{{/ block_taggedcoursesearch/paging-content-item }}
